{{#extend 'default'}}
  {{#content 'masthead'}}
    {{> 2018/masthead-article}}
  {{/content}}
  {{#content 'contents'}}
  <div class="box cols">
    {{#select 'evan'}}
    {{> 2018/minimug}}
    {{/select}}
    <div class="description">
      {{{contents}}}
    </div>
  </div>
  <div class="ticket-area" id="tickets">
    <div class="box">
    <h2>Tickets</h2>
      <p>
        If the form below is not visible or not working for you, please use
        <a href="https://ti.to/scriptconf/scriptconf-2018">this link to get your conference ticket.</a>
      </p>
    </div>
    <tito-widget event="scriptconf/scriptconf-2018"{{#if ticket}} releases="{{ticket}}"{{/if}}></tito-widget>
    <div class="box">
      <p>
        All prices are inclusive VAT. Buying via Tito also gets you an invoice. Tickets are not refundable, but re-assignable.
      </p>
    </div>
  </div>

  {{/content}}
{{/extend}}

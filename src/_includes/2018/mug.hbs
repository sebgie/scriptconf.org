<li class="speaker">
  <img src="{{img}}" class="speaker-img" alt="{{name}}" />
  <div class="speaker-details">
    <h4 class="speaker-name">{{name}}
    <a href="https://twitter.com/{{twitter}}">
      <svg class="icon">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-twitter"></use>
      </svg>
    </a>
    </h4>
    <p class="speaker-title">
      {{title}}
    </p>
    <h4 class="talk-info">
      {{#unless @root.workshop-only}}
      {{#if talk.title }}Talk: <a href="#{{id}}">{{talk.title}}</a>
      {{else}}talk tba
      {{/if}}
      {{/unless}}
      {{#if additional}}
      {{#unless @root.workshop-only}}<br>{{/unless}}
      {{{additional.title}}}
      {{/if}}
    </h4>
  </div>
</li>
